@model IEnumerable<drunkShop.Models.Category>
<link rel="stylesheet" href="~/css/showDB.css" asp-append-version="true" />

<div class="wrapper-db">
    <div class="cont">
        <div class="zagolovok">
            <h2>Список категорий</h2>
        </div>
        <div class="forBtnCreate">
            <a asp-controller="Category" asp-action="Create" class="btnAddDB">+ Создать категорию</a>
        </div>

        @if (Model.Count() > 0)
        {
            <table class="tableDB">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Порядок отображения</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Naming</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btnEdit">
                                        <img src="~/Images/edit.png" alt="">
                                    </a>
                                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btnDelete">
                                        <img src="~/Images/delete.png" alt="">
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>
                Пока не создано ни одной категории
            </p>
        }
    </div>
</div>