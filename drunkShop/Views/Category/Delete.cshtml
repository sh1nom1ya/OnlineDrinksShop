@model drunkShop.Models.Category
<link rel="stylesheet" href="~/css/editingDB.css" asp-append-version="true" />


<div class="cont1">
    <form method="post" asp-action="DeletePost">
        <input asp-for="Id" hidden />

        <h2>Удаление категории</h2>

        <div class="In">
            <label asp-for="Naming">Название</label>
            <input asp-for="Naming" class="form-control" />
            <span asp-validation-for="Naming" class="text-danger"></span>
        </div>

        <div class="In">
            <label asp-for="DisplayOrder">Порядок</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="buttons">
            <button type="submit" class="back-btn">Удалить</button>
            <a asp-action="Index" class="back-btn">Вернуться</a>
        </div>
    </form>
</div>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
