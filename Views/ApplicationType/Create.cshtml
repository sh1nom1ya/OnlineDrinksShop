@model drunkShop.Models.ApplicationType
<link rel="stylesheet" href="~/css/editingDB.css" asp-append-version="true" />


<div class="cont1">
    <form method="post" asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2>Создание типа</h2>

        <div class="In">
            <label asp-for="Naming">Название</label>
            <input asp-for="Naming" class="form-control" />
            <span asp-validation-for="Naming" class="text-danger"></span>
        </div>

        <div class="buttons">
            <button type="submit" class="create-btn">Создать</button>
            <a asp-action="Index" class="back-btn">Вернуться</a>
        </div>
    </form>
</div>

@section Scripts {

    @{ <partial name="_ValidationScriptsPartial" /> }

}
