@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />

<h2>Изменение пароля</h2>
<form id="change-password-form" method="post" class="inp">
    <div>
        <label for="pass">Действующий пароль</label>
        <input required
               class="inputprof form-control"
               type="text"
               id="pass"
               name="pass"
               autocomplete="cc-pass"
               placeholder=""
               pattern="[a-zA-Zа-яА-ЯёЁ]+\s[a-zA-Zа-яА-ЯёЁ]+"
               title="">
    </div>
    <div>
        <label for="pass">Подтверждение пароля</label>
        <input required
               class="inputprof form-control"
               type="text"
               id="pass"
               name="pass"
               autocomplete="cc-pass"
               placeholder=""
               pattern="[a-zA-Zа-яА-ЯёЁ]+\s[a-zA-Zа-яА-ЯёЁ]+"
               title="">
    </div>
    <div>
        <label for="pass">Новый пароль</label>
        <input required
               class="inputprof form-control"
               type="text"
               id="pass"
               name="pass"
               autocomplete="cc-pass"
               placeholder=""
               pattern="[a-zA-Zа-яА-ЯёЁ]+\s[a-zA-Zа-яА-ЯёЁ]+"
               title="">
    </div>
    <button class="save">Сохранить</button>

</form>
